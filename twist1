while True:
    try:
        bob = int(input("Please input Bob's total before tax and tip.\n"))
        break
    except ValueError:
        print("That is not a valid number.")


def bill(person):
    tax_tip_total = person + (person*0.20)
    tax_tip_bob_total = tax_tip_total+(bob*1.20/7)
    #Tax is 5% and tip is 15% - add amount + 15% + 5%, then divide by 7
    return tax_tip_bob_total

    #return back from function

print(f"Person 1's final bill is: "+ "${:,.2f}".format(bill(person1)))
 
print(f"Person 2's final bill is: "+ "${:,.2f}".format(bill(person2)))
 
print(f"Person 3's final bill is: "+ "${:,.2f}".format(bill(person3)))
 
